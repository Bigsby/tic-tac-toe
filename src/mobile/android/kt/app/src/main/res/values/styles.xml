<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoardText" parent="">
        <item name="android:textColor">@color/colorDefaultBoardText</item>
        <item name="android:height">80dp</item>
        <item name="android:width">80dp</item>
        <item name="android:textSize">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BoardDivider">
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="HorizontalDivider" parent="BoardDivider">
    </style>

    <style name="VerticalDivider" parent="BoardDivider">
    </style>

    <style name="DisplayMessage">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>



</resources>
